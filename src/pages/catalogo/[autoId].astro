---
import autosData from '../../data/autos.json';
import LayoutCatalogo from '../../layouts/LayoutCatalogo.astro';
const { autoId } = Astro.params;

if (!autoId) {
    throw new Error('autoId no está definido. Verifica la ruta o las params.');
}

const autos = autosData.autos;
const vehicle = autos.find(vehicle => vehicle.id === Number(autoId));
if (!vehicle) {
    throw new Error(`Auto with id ${autoId} not found`);
}
---
<LayoutCatalogo title={`${vehicle.marca} ${vehicle.modelo} ${vehicle.año}`}>
    <main>
      <nav class="breadcrumb">
        <a href="/">Home</a> / <a href="/catalogo">Catálogo</a> / <span>{vehicle.marca} {vehicle.modelo}</span>
      </nav>
  
      <div class="vehicle-container">
        <div class="image-section">
          <img  transition:name={`${vehicle.id} image box`} src={vehicle.imagen} alt={`${vehicle.marca} ${vehicle.modelo}`} />
          <div class="description my-2 rounded-lg p-2">
            <h2 class="italic font-bold">Descripción personal del vehiculo</h2>
            <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Officia beatae aliquid nulla nisi quis mollitia, non cupiditate atque ducimus saepe ex placeat tenetur laborum iusto quam commodi alias sapiente molestiae.</p>
          </div>
        </div>
  
        <div class="info-section">
          <h1>{vehicle.marca} {vehicle.modelo}</h1>
          <div class="price">{vehicle.precio}</div>
          
          <div class="specs">
            <span class="text-xl font-medium">Ficha técnica</span>
            <div class="spec-item">
              <span class="label">Año</span>
              <span class="value">{vehicle.año}</span>
            </div>
            <div class="spec-item">
              <span class="label">Motor</span>
              <span class="value">{vehicle.motor}</span>
            </div>
            <div class="spec-item">
              <span class="label">Carrocería</span>
              <span class="value">{vehicle.carroceria}</span>
            </div>

          </div>
  
          <div class="actions">
            <button class="contact-btn">Contactar vendedor</button>
            <button class="schedule-btn">Agendar prueba de manejo</button>
          </div>
        </div>
      </div>
    </main>
  </LayoutCatalogo>
  
  <style>
    main {
      margin: auto;
      padding: 2rem;
      max-width: 1200px;
      color: #333;

    }
  
    .breadcrumb {
      margin-bottom: 2rem;
      color: #555;
    }
  
    .breadcrumb a {
      color: #555;
      text-decoration: none;
    }
  
    .breadcrumb a:hover {
      color: #000;
    }
  
    .vehicle-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      background: #fff;
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
  
    .image-section img {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }
    
    .info-section h1 {
      font-size: 2.5rem;
      margin: 0 0 1rem 0;
      color: #222;
    }
  
    .price {
      font-size: 2rem;
      color: #388e3c;
      margin-bottom: 2rem;
    }
  
    .specs {
      display: grid;
      
      margin-bottom: 2rem;
    }
  
    .spec-item {
      display: flex;
      justify-content: space-between;
      padding: 1rem;
      background: #f1f1f1;
      border-bottom: 2px solid #e0e0e0;
     
    }
  
    .label {
      color: #555;
    }
  
    .value {
      font-weight: bold;
      color: #222;
    }
  
    .actions {
      display: grid;
      gap: 1rem;
    }
  
    button {
      padding: 1rem;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: transform 0.2s, background-color 0.3s;
    }
  
    button:hover {
      transform: translateY(-2px);
    }
  
    .contact-btn {
      background: #1976d2;
      color: white;
    }
  
    .contact-btn:hover {
      background: #1565c0;
    }
  
    .schedule-btn {
      background: #e0e0e0;
      color: #333;
      border: 1px solid #ccc;
    }
  
    .schedule-btn:hover {
      background: #d5d5d5;
    }
  
    @media (max-width: 768px) {
      .vehicle-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
