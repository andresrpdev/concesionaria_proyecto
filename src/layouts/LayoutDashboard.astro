---
const { title } = Astro.props;
import Aside from "../components/dashboard/aside.astro";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex ">
      <Aside />
      <main class="flex-1 p-6  ml-64">
        <h1 class="text-3xl font-extrabold uppercase">{title}</h1>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(237, 237, 237, 0.802);
  }
</style>
